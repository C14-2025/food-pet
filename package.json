{
  "name": "projeto-c14",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "tsc --noEmit -p tsconfig.json && eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:jest": "tsc --noEmit -p tsconfig.jest.json && eslint . --ext .ts,.tsx",
    "lint:cypress": "tsc --noEmit -p tsconfig.cypress.json && eslint cypress --ext .ts",
    "lint:all": "npm run lint && npm run lint:jest && npm run lint:cypress",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cypress:run",
    "db:migrate": "npx prisma migrate dev --name init",
    "db:deploy": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset --force",
    "db:generate": "npx prisma generate",
    "db:seed": "tsx src/app/api/scripts/seed/index.ts",
    "db:mount": "npm run db:deploy && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "lucide-react": "^0.543.0",
    "next": "^15.5.3",
    "next-auth": "^5.0.0-beta.30",
    "pg-hstore": "^2.3.4",
    "react": "19.1.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "19.1.0",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cypress": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.2",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "cypress": "^15.3.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-html-reporter": "^4.3.0",
    "jiti": "^2.5.1",
    "nodemailer": "^7.0.6",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.9.3"
  }
}
